<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="eventService" class="org.bonitasoft.engine.events.impl.EventServiceImpl">
		<constructor-arg name="eventBuilder" ref="eventBuilder"></constructor-arg>
		<constructor-arg name="handlers">
			<map>
				<entry key="USER_IS_CREATED">
					<ref bean="userHandler" />
				</entry>
				<entry key="USER_IS_DELETED">
					<ref bean="userHandler" />
				</entry>
				<entry key="SCHEDULER_STARTED">
					<ref bean="schedulerHandler" />
				</entry>
				<entry key="SCHEDULER_STOPPED">
					<ref bean="schedulerHandler" />
				</entry>
				<entry key="TRANSACTION_ACTIVE">
					<ref bean="transactionHandler" />
				</entry>
				<entry key="TRANSACTION_COMMITED">
					<ref bean="transactionHandler" />
				</entry>
				<entry key="TRANSACTION_ROLLEDBACK">
					<ref bean="transactionHandler" />
				</entry>
				<entry key="JOB_EXECUTING">
					<ref bean="jobHandler" />
				</entry>
				<entry key="JOB_FAILED">
					<ref bean="jobHandler" />
				</entry>
				<entry key="JOB_COMPLETED">
					<ref bean="jobHandler" />
				</entry>
			</map>
		</constructor-arg>
	</bean>

	<bean id="userHandler"
		class="org.bonitasoft.engine.monitoring.model.impl.SUserHandlerImpl">
	</bean>
	<bean id="schedulerHandler"
		class="org.bonitasoft.engine.monitoring.model.impl.SSchedulerHandlerImpl">
	</bean>
	<bean id="transactionHandler"
		class="org.bonitasoft.engine.monitoring.model.impl.STransactionHandlerImpl">
	</bean>
	<bean id="jobHandler"
		class="org.bonitasoft.engine.monitoring.model.impl.SJobHandlerImpl">
	</bean>

</beans>