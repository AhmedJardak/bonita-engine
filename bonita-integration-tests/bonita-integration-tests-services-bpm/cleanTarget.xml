<project name="bonita-integration-tests-servives-bpm" default="cleantarget">

	<property name="target.dir" value="${basedir}/target"/>
	<property name="resources.dir" value="${basedir}/src/test/resources"/>
	<property name="bh.source.dir" value="${basedir}/../../bpm/bonita-home/target"/>
	<property name="bh.target.dir" value="${target.dir}/bonita-home"/>
	<property name="bh.target.conf.platform.dir" value="${bh.target.dir}/engine-server/conf/platform"/>
	
	<target name="cleantarget">
		<delete dir="${bh.target.dir}" />
		<unzip dest="${target.dir}">
			<fileset dir="${bh.source.dir}">
				<include name="bonita-home-*.zip"/>
			</fileset>
		</unzip>
		<copy file="${resources.dir}/bonita-platform-community-user-custom.xml" todir="${bh.target.conf.platform.dir}" overwrite="true"/>
	</target>

</project>