<project name="bonita-integration-tests-servives-bpm" default="build">

	<property name="target.dir" value="${basedir}/target"/>
	<property name="bh.source.dir" value="${basedir}/../../bpm/bonita-home/target/bonita-home"/>
	<property name="local.test.resources.dir" value="${basedir}/../bonita-test-utils/bonita-server-test-utils/src/main/resources"/>
	<property name="bh.target.dir" value="${target.dir}/bonita-home"/>
	<property name="bh.target.conf.platforminit.dir" value="${bh.target.dir}/engine-server/conf/platform-init"/>
	
	<target name="build">
		<delete dir="${bh.target.dir}" />
		<copy todir="${bh.target.dir}">
			<fileset dir="${bh.source.dir}">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="${bh.target.conf.platforminit.dir}">
			<fileset dir="${local.test.resources.dir}">
				<include name="*"/>
			</fileset>
		</copy>
	</target>

</project>