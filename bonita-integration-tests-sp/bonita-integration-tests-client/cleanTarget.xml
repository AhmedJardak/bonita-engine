<project name="bonita-integration-tests-client-sp" default="cleanhome">

	<property name="bos_home" value="../../../bonita-engine/bpm/bonita-home" />
	<property name="bonita.home" value="${basedir}/../../bpm/bonita-home" />
	<property name="target.dir" value="${basedir}/target" />

	<target name="cleanhome">
		<delete dir="${target.dir}/home" />
		<copy todir="${target.dir}/home">
			<fileset dir="${bos_home}/common" />
		</copy>
		<echo>Copy default Hibernate configuration files</echo>
		<copy todir="${target.dir}/home">
			<fileset dir="${bos_home}/hibernate" />
		</copy>
		<copy todir="${target.dir}/home" overwrite="true">
			<fileset dir="${bonita.home}/base" />
		</copy>
		<echo>Override specific Hibernate SP configuration</echo>
		<copy todir="${target.dir}/home" overwrite="true">
			<fileset dir="${bonita.home}/hibernate" />
		</copy>
		<echo>Copy specific "SP Performance edition" configuration files</echo>
		<copy todir="${target.dir}/home" overwrite="true">
			<fileset dir="${bonita.home}/editions/performance" />
		</copy>
		<echo>Copy license file from your $HOME/lic folder</echo>
		<copy todir="${target.dir}/home/server/licenses" failonerror="true">
			<fileset dir="${user.home}/lic" includes="*.lic" />
		</copy>
		<loadfile srcFile="${bonita.home}/pom.xml" property="project.version">
			<filterchain>
				<linecontains>
					<contains value="version>" />
				</linecontains>
				<headfilter lines="1" />
				<replaceregex pattern=".*&lt;version&gt;(.*)&lt;/version&gt;.*" replace="\1" />
			</filterchain>
		</loadfile>
		<echo file="${target.dir}/home/server/platform/conf/VERSION" append="false">${project.version}</echo>
		
	</target>



</project>