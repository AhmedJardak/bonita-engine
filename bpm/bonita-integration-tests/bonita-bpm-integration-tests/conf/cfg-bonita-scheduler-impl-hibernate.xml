<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="hbm-bonita-scheduler" class="org.bonitasoft.engine.persistence.HibernateResourcesProvider">
		<property name="resources">
			<set>
				<value>org/bonitasoft/engine/scheduler/impl/hibernate/schedulerimpl.hbm.xml</value>
				<value>org/bonitasoft/engine/scheduler/impl/hibernate/schedulerimpl.queries.hbm.xml</value>
			</set>
		</property>
		<property name="sequencesMappings">
			<map>
				<entry key="org.bonitasoft.engine.scheduler.impl.model.SJobDescriptorImpl" value="70" />
				<entry key="org.bonitasoft.engine.scheduler.impl.model.SJobParameterImpl" value="71" />
			</map>
		</property>
		<property name="classAliasMappings">
			<map>
				<entry key="org.bonitasoft.engine.scheduler.impl.model.SJobDescriptorImpl" value="jd" />
				<entry key="org.bonitasoft.engine.scheduler.impl.model.SJobParameterImpl" value="jp" />
			</map>
		</property>
	</bean>

	<bean id="db-bonita-scheduler" class="org.bonitasoft.engine.persistence.DBConfiguration">
		<constructor-arg name="createTablesFile" value="/org/bonitasoft/engine/scheduler/impl/db/${db.vendor}-createTables.sql" />
		<constructor-arg name="dropTablesFile" value="/org/bonitasoft/engine/scheduler/impl/db/${db.vendor}-dropTables.sql" />
		<constructor-arg name="initTablesFile" value="/org/bonitasoft/engine/scheduler/impl/db/${db.vendor}-initTables.sql" />
		<constructor-arg name="filter" value="journal" />
		<constructor-arg name="deleteTenantObjectsFile" value="/org/bonitasoft/engine/scheduler/impl/db/${db.vendor}-deleteTenantObjects.sql" />
		<constructor-arg name="deleteTenantObjectsPriority" type="int" value="5"/>
	</bean>

</beans>