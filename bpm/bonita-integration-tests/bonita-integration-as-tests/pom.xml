<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.bonitasoft.engine</groupId>
		<artifactId>bonita-integration-tests</artifactId>
		<version>6.2.3-dummy-001</version>
	</parent>

	<artifactId>bonita-integration-as-tests</artifactId>
	<packaging>pom</packaging>

	<name>Bonita AS Tests</name>

	<properties>
		<bitronix.version>2.1.3</bitronix.version>
		<distrib.dir>${project.build.directory}/bonita-engine-deploy</distrib.dir>
		<bonita.home>${project.build.directory}/bonita</bonita.home>
		<bonita.home.classifier>hibernate-teamwork</bonita.home.classifier>
		<bonita.version></bonita.version>
		<!-- TESTS DIRS -->
		<test.class>com.bonitasoft.engine.BPMSPTestsForServers</test.class>
		<report.results>${distrib.dir}/target/testresults</report.results>
		<report.xml>${report.results}/xml</report.xml>
		<surefire.reports>${project.build.directory}/surefire-reports</surefire.reports>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.bonitasoft.engine</groupId>
			<artifactId>bonita-integration-client-tests-sp</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
		</dependency>
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>com.bonitasoft.engine</groupId>
									<artifactId>bonita-engine-deploy</artifactId>
									<classifier>${bonita.home.classifier}</classifier>
									<version>${project.version}</version>
									<type>zip</type>
									<overWrite>false</overWrite>
									<outputDirectory>${distrib.dir}</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
					<execution>
						<id>copy</id>
						<phase>package</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>com.h2database</groupId>
									<artifactId>h2</artifactId>
									<outputDirectory>${project.build.directory}/driver</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>mysql</groupId>
									<artifactId>mysql-connector-java</artifactId>
									<outputDirectory>${project.build.directory}/driver</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>sp</id>
			<properties>
				<bonita.version>-sp</bonita.version>
				<test.class>com.bonitasoft.engine.BPMSPTestsForServers</test.class>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>unpack</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>unpack</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>com.bonitasoft.engine</groupId>
											<artifactId>bonita-engine-deploy</artifactId>
											<version>${project.version}</version>
											<classifier>hibernate</classifier>
											<type>zip</type>
											<overWrite>false</overWrite>
											<outputDirectory>${distrib.dir}</outputDirectory>
										</artifactItem>
									</artifactItems>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>package-all</id>
			<modules>
				<module>bonita-integration-tomcat6</module>
				<module>bonita-integration-tomcat6-cluster</module>
				<module>bonita-integration-tomcat7</module>
			</modules>
		</profile>
		<profile>
			<id>slow</id>
			<modules>
				<module>bonita-integration-tomcat6-cluster</module>
			</modules>
		</profile>
	</profiles>

</project>
