<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.bonitasoft.engine</groupId>
		<artifactId>bonita-integration-tests</artifactId>
		<version>6.0.0-beta-012-SNAPSHOT</version>
	</parent>

	<artifactId>bonita-integration-as-tests</artifactId>
	<packaging>pom</packaging>

	<name>Bonita AS Tests</name>

	<properties>
		<distrib.dir>${project.build.directory}/bonita-engine-deploy</distrib.dir>
		<bonita.home>${project.build.directory}/bonita</bonita.home>
		<bonita.home.classifier>hibernate</bonita.home.classifier>
		<bonita.version></bonita.version>
		<!-- TESTS DIRS -->
		<test.class>com.bonitasoft.engine.BPMSPTestsForServers</test.class>
		<report.results>${distrib.dir}/target/testresults</report.results>
		<report.xml>${report.results}/xml</report.xml>
		<surefire.reports>${project.build.directory}/surefire-reports</surefire.reports>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.bonitasoft.engine</groupId>
			<artifactId>bonita-integration-client-tests-sp</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>com.bonitasoft.engine</groupId>
									<artifactId>bonita-engine-deploy</artifactId>
									<classifier>${bonita.home.classifier}</classifier>
									<version>${project.version}</version>
									<type>zip</type>
									<overWrite>false</overWrite>
									<outputDirectory>${distrib.dir}</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
					<execution>
						<id>copy</id>
						<phase>package</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>com.h2database</groupId>
									<artifactId>h2</artifactId>
									<outputDirectory>${project.build.directory}/driver</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>commons-dbcp</groupId>
									<artifactId>commons-dbcp</artifactId>
									<version>1.4</version>
									<outputDirectory>${project.build.directory}/driver</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>commons-pool</groupId>
									<artifactId>commons-pool</artifactId>
									<version>1.5.5</version>
									<outputDirectory>${project.build.directory}/driver</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>