<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>bos-deploy-sp</artifactId>
		<groupId>com.bonitasoft.engine</groupId>
		<version>6.0-SNAPSHOT</version>
	</parent>

	<artifactId>bos-deploy-ear-sp</artifactId>
	<packaging>ear</packaging>

	<name>BOS Deploy: EAR</name>

	<dependencies>
		<dependency>
			<groupId>org.bonitasoft.engine</groupId>
			<artifactId>bos-deploy-ejb</artifactId>
			<version>${project.version}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>com.bonitasoft.engine</groupId>
			<artifactId>bos-server-sp</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-classic</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-dbcp</groupId>
			<artifactId>commons-dbcp</artifactId>
			<version>1.4</version>
		</dependency>
		<dependency>
			<groupId>commons-pool</groupId>
			<artifactId>commons-pool</artifactId>
			<version>1.5.5</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<defaultJavaBundleDir>lib</defaultJavaBundleDir>
					<modules>
						<ejbModule>
							<groupId>org.bonitasoft.engine</groupId>
							<artifactId>bos-deploy-ejb</artifactId>
							<bundleDir>/</bundleDir>
						</ejbModule>
						<jarModule>
							<groupId>com.bonitasoft.engine</groupId>
							<artifactId>bos-server-sp</artifactId>
						</jarModule>
						<jarModule>
							<groupId>ch.qos.logback</groupId>
							<artifactId>logback-classic</artifactId>
						</jarModule>
						<jarModule>
							<groupId>com.h2database</groupId>
							<artifactId>h2</artifactId>
						</jarModule>
						<jarModule>
							<groupId>commons-dbcp</groupId>
							<artifactId>commons-dbcp</artifactId>
						</jarModule>
						<jarModule>
							<groupId>commons-pool</groupId>
							<artifactId>commons-pool</artifactId>
						</jarModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>