<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>hibernate-teamwork</id>
	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib/client</outputDirectory>
			<includes>
				<include>com.bonitasoft.engine:bonita-client-sp</include>
				<include>com.bonitasoft.engine:bonita-common-sp</include>
			</includes>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveFiltering>true</useTransitiveFiltering>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib/server</outputDirectory>
			<includes>
				<include>com.bonitasoft.engine:bonita-server-sp</include>
				<include>com.bonitasoft.engine:bonita-common-sp</include>
			</includes>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveFiltering>true</useTransitiveFiltering>
		</dependencySet>
		<dependencySet>
			<outputDirectory>ear/ejb2</outputDirectory>
			<includes>
				<include>com.bonitasoft.engine:bonita-deploy-ear2-sp</include>
			</includes>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveFiltering>true</useTransitiveFiltering>
		</dependencySet>
		<dependencySet>
			<outputDirectory>ear/ejb3</outputDirectory>
			<includes>
				<include>com.bonitasoft.engine:bonita-deploy-ear3-sp</include>
			</includes>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveFiltering>true</useTransitiveFiltering>
		</dependencySet>
		<dependencySet>
			<outputDirectory>war</outputDirectory>
			<includes>
				<include>com.bonitasoft.engine:bonita-deploy-war-sp</include>
			</includes>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveFiltering>true</useTransitiveFiltering>
		</dependencySet>
		<dependencySet>
			<outputDirectory>resources</outputDirectory>
			<includes>
				<include>com.bonitasoft.engine:bonita-home-sp:zip:teamwork</include>
			</includes>
			<unpack>true</unpack>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>resources</directory>
			<outputDirectory />
		</fileSet>
	</fileSets>

</assembly>