<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>deploy</id>
	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib/client</outputDirectory>
			<includes>
				<include>com.bonitasoft.engine:bos-client-sp</include>
				<include>com.bonitasoft.engine:bos-common-sp</include>
			</includes>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveFiltering>false</useTransitiveFiltering>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib/server</outputDirectory>
			<includes>
				<include>com.bonitasoft.engine:bos-server-sp</include>
				<include>com.bonitasoft.engine:bos-common-sp</include>
			</includes>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveFiltering>true</useTransitiveFiltering>
		</dependencySet>
		<dependencySet>
			<outputDirectory>ear/ejb3</outputDirectory>
			<includes>
				<include>com.bonitasoft.engine:bos-deploy-ear-sp</include>
			</includes>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveFiltering>true</useTransitiveFiltering>
		</dependencySet>
		<dependencySet>
			<outputDirectory>resources</outputDirectory>
			<includes>
				<include>com.bonitasoft.engine:bos-home-sp</include>
			</includes>
			<unpack>true</unpack>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>resources</directory>
			<outputDirectory />
		</fileSet>
	</fileSets>

</assembly>