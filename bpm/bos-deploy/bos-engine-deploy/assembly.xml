<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>deploy</id>
	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveFiltering>true</useTransitiveFiltering>
			<includes>
				<include>com.bonitasoft.engine:bos-client-sp</include>
			</includes>
			<outputDirectory>lib/client</outputDirectory>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveFiltering>true</useTransitiveFiltering>
			<includes>
				<include>com.bonitasoft.engine:bos-server-sp</include>
			</includes>
			<excludes>
				<exclude>org.bonitasoft.engine:bos-common</exclude>
			</excludes>
			<outputDirectory>lib/server</outputDirectory>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>resources</directory>
			<outputDirectory />
		</fileSet>
	</fileSets>

</assembly>