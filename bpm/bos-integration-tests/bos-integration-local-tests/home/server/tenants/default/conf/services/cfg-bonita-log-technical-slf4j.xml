<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="technicalLoggerService" class="org.bonitasoft.engine.log.technical.TechnicalLoggerSLF4JImpl">
		<constructor-arg ref="technicalLoggerConfiguration"/>
	</bean>
	
	<bean id="technicalLoggerConfiguration" class="org.bonitasoft.engine.log.technical.BaseTechnicalLoggerConfiguration">
		<constructor-arg name="needsInferCaller" value="true"/>
	</bean>
</beans>