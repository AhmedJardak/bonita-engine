<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="cacheService" class="org.bonitasoft.engine.cache.ehcache.EhCacheCacheService">
		<constructor-arg name="logger" ref="technicalLoggerService" />
		<constructor-arg name="sessionAccessor" ref="sessionAccessor" />
		<constructor-arg name="cacheConfigurations">
			<map>
				<entry key="GROOVY_SCRIPT_CACHE_NAME" value-ref="groovyScriptCacheConfig" />
			</map>
		</constructor-arg>
	</bean>
	
	<bean id="groovyScriptCacheConfig" class="org.bonitasoft.engine.cache.CacheConfiguration">
		<constructor-arg name="timeToLiveSeconds" value="3600"/>
		<constructor-arg name="maxElementsInMemory" value="10000"/>
		<constructor-arg name="maxElementsOnDisk" value="20000"/>
		<constructor-arg name="inMemoryOnly" value="true"/>
	</bean>

</beans>