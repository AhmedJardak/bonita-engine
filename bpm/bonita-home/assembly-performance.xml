<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>performance</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<outputDirectory>home</outputDirectory>
			<directory>editions/performance</directory>
		</fileSet>
		<fileSet>
			<outputDirectory>home</outputDirectory>
			<directory>base</directory>
		</fileSet>
		<fileSet>
			<outputDirectory>home</outputDirectory>
			<directory>hibernate</directory>
		</fileSet>
		<fileSet>
			<outputDirectory>home</outputDirectory>
			<directory>${project.build.directory}/base-hibernate/home</directory>
		</fileSet>
		<fileSet>
			<outputDirectory>home</outputDirectory>
			<directory>${project.build.directory}/common/home</directory>
		</fileSet>
	</fileSets>
</assembly>
