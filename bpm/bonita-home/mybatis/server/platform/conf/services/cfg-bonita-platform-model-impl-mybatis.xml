<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<bean class="com.bonitasoft.engine.persistence.PlatformMyBatisConfiguration">
		<constructor-arg name="typeAliases">
			<map>
				<entry key="platform" value="org.bonitasoft.engine.platform.model.impl.SPlatformImpl" />
				<entry key="tenant" value="org.bonitasoft.engine.platform.model.impl.STenantImpl" />
			</map>
		</constructor-arg>
		<constructor-arg name="mappers">
			<list>
				<value>com/bonitasoft/engine/platform/model/impl/mybatis/SPlatformMapper.xml</value>
				<value>com/bonitasoft/engine/platform/model/impl/mybatis/STenantMapper.xml</value>
			</list>
		</constructor-arg>
		<constructor-arg name="classAliasMappings">
			<map>
				<entry key="org.bonitasoft.engine.platform.model.SPlatform" value="platform" />
				<entry key="org.bonitasoft.engine.platform.model.STenant" value="tenant" />
			</map>
		</constructor-arg>
		<constructor-arg name="classFieldAliasMappings">
			<map />
		</constructor-arg>
		<constructor-arg name="statementMapping">
			<set />
		</constructor-arg>
		<constructor-arg name="dbStatementsMapping">
			<map />
		</constructor-arg>
		<constructor-arg name="entityMappings">
			<map>
				<entry key="org.bonitasoft.engine.platform.model.SPlatform" value="org.bonitasoft.engine.platform.model.impl.SPlatformImpl" />
				<entry key="org.bonitasoft.engine.platform.model.STenant" value="org.bonitasoft.engine.platform.model.impl.STenantImpl" />
			</map>
		</constructor-arg>
	</bean>

	<bean class="org.bonitasoft.engine.persistence.DBConfiguration">
		<constructor-arg name="createTablesFile" value="/org/bonitasoft/engine/platform/db/${db.vendor}-createTables.sql" />
		<constructor-arg name="initTablesFile" value="/org/bonitasoft/engine/platform/db/${db.vendor}-initTables.sql" />
		<constructor-arg name="cleanTablesFile" value="/org/bonitasoft/engine/platform/db/${db.vendor}-cleanTables.sql" />
		<constructor-arg name="dropTablesFile" value="/org/bonitasoft/engine/platform/db/${db.vendor}-dropTables.sql" />
		<constructor-arg name="filter" value="platform" />
	</bean>

</beans>