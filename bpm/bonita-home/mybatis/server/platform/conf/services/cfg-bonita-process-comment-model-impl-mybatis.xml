<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean class="com.bonitasoft.engine.persistence.MyBatisConfiguration">
		<constructor-arg name="typeAliases">
			<map>
				<entry key="process_comment" value="org.bonitasoft.engine.core.process.comment.model.impl.SCommentImpl" />
				<entry key="human_comment" value="org.bonitasoft.engine.core.process.comment.model.impl.SHumanCommentImpl" />
				<entry key="system_comment" value="org.bonitasoft.engine.core.process.comment.model.impl.SSystemCommentImpl" />
			</map>
		</constructor-arg>
		<constructor-arg name="mappers">
			<list>
				<value>com/bonitasoft/engine/core/process/comment/model/impl/mybatis/CommentMapper.xml</value>
			</list>
		</constructor-arg>
		<constructor-arg name="classAliasMappings">
			<map>
				<entry key="org.bonitasoft.engine.core.process.comment.model.SComment" value="process_comment" />
				<entry key="org.bonitasoft.engine.core.process.comment.model.SHumanComment" value="process_comment" />
				<entry key="org.bonitasoft.engine.core.process.comment.model.SSystemComment" value="process_comment" />
			</map>
		</constructor-arg>
		<constructor-arg name="classFieldAliasMappings">
			<map />
		</constructor-arg>
		<constructor-arg name="statementMapping">
			<set>
				<bean class="org.bonitasoft.engine.persistence.StatementMapping">
					<constructor-arg name="sourceStatement" value="org.bonitasoft.engine.core.process.comment.model.impl.SHumanCommentImpl.insertSHumanCommentImpl" />
					<constructor-arg name="destinationStatement" value="org.bonitasoft.engine.core.process.comment.model.impl.SCommentImpl.insertSCommentImpl" />
					<constructor-arg name="parameterName" value="kind" />
					<constructor-arg name="parameterValue" value="human" />
				</bean>
				
				<bean class="org.bonitasoft.engine.persistence.StatementMapping">
					<constructor-arg name="sourceStatement" value="org.bonitasoft.engine.core.process.comment.model.impl.SSystemCommentImpl.insertSSystemCommentImpl" />
					<constructor-arg name="destinationStatement" value="org.bonitasoft.engine.core.process.comment.model.impl.SCommentImpl.insertSCommentImpl" />
					<constructor-arg name="parameterName" value="kind" />
					<constructor-arg name="parameterValue" value="system" />
				</bean>
				
				<bean class="org.bonitasoft.engine.persistence.StatementMapping">
					<constructor-arg name="sourceStatement" value="org.bonitasoft.engine.core.process.comment.model.impl.SHumanCommentImpl.deleteSHumanCommentImpl" />
					<constructor-arg name="destinationStatement" value="org.bonitasoft.engine.core.process.comment.model.impl.SCommentImpl.deleteSCommentImpl" />
					<constructor-arg name="parameterName" value="kind" />
					<constructor-arg name="parameterValue" value="human" />
				</bean>
				
				<bean class="org.bonitasoft.engine.persistence.StatementMapping">
					<constructor-arg name="sourceStatement" value="org.bonitasoft.engine.core.process.comment.model.impl.SSystemCommentImpl.deleteSSystemCommentImpl" />
					<constructor-arg name="destinationStatement" value="org.bonitasoft.engine.core.process.comment.model.impl.SCommentImpl.deleteSCommentImpl" />
					<constructor-arg name="parameterName" value="kind" />
					<constructor-arg name="parameterValue" value="system" />
				</bean>

			</set>
		</constructor-arg>
		<constructor-arg name="dbStatementsMapping">
			<map />
		</constructor-arg>
		<constructor-arg name="entityMappings">
			<map>
				<entry key="org.bonitasoft.engine.core.process.comment.model.SComment" value="org.bonitasoft.engine.core.process.comment.model.impl.SCommentImpl" />
				<entry key="org.bonitasoft.engine.core.process.comment.model.SHumanComment" value="org.bonitasoft.engine.core.process.comment.model.impl.SHumanCommentImpl" />
				<entry key="org.bonitasoft.engine.core.process.comment.model.SSystemComment" value="org.bonitasoft.engine.core.process.comment.model.impl.SSystemCommentImpl" />
			</map>
		</constructor-arg>
	</bean>

	
	<bean class="org.bonitasoft.engine.persistence.MyBatisConfiguration">
		<constructor-arg name="typeAliases">
			<map>
				<entry key="arch_process_comment" value="org.bonitasoft.engine.core.process.comment.model.archive.impl.SACommentImpl" />
			</map>
		</constructor-arg>
		<constructor-arg name="mappers">
			<list>
				<value>org/bonitasoft/engine/core/process/comment/model/impl/mybatis/ArchivedCommentMapper.xml</value>
			</list>
		</constructor-arg>
		<constructor-arg name="classAliasMappings">
			<map>
				<entry key="org.bonitasoft.engine.core.process.comment.model.archive.SAComment" value="arch_process_comment" />
			</map>
		</constructor-arg>
		<constructor-arg name="classFieldAliasMappings">
			<map />
		</constructor-arg>
		<constructor-arg name="statementMapping">
			<set />
		</constructor-arg>
		<constructor-arg name="dbStatementsMapping">
			<map />
		</constructor-arg>
		<constructor-arg name="entityMappings">
			<map>
				<entry key="org.bonitasoft.engine.core.process.comment.model.archive.SAComment" value="org.bonitasoft.engine.core.process.comment.model.archive.impl.SACommentImpl" />
			</map>
		</constructor-arg>
	</bean>	
</beans>