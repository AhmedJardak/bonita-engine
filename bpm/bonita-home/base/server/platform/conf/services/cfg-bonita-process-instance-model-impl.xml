<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="bpmInstanceBuilders" class="org.bonitasoft.engine.core.process.instance.model.builder.impl.BPMinstanceBuildersImpl" />

	<bean class="org.bonitasoft.engine.persistence.DBConfiguration">
		<constructor-arg name="createTablesFile" value="/org/bonitasoft/engine/core/process/instance/model/impl/db/${db.vendor}-createTables.sql" />
		<constructor-arg name="initTablesFile" value="/org/bonitasoft/engine/core/process/instance/model/impl/db/${db.vendor}-initTables.sql" />
		<constructor-arg name="dropTablesFile" value="/org/bonitasoft/engine/core/process/instance/model/impl/db/${db.vendor}-dropTables.sql" />
		<constructor-arg name="filter" value="journal" />
		<constructor-arg name="deleteTenantObjectsFile" value="/org/bonitasoft/engine/core/process/instance/model/impl/db/${db.vendor}-deleteTenantObjects.sql" />
		<property name="sqlTransformers">
			<map>
				<entry key="org.bonitasoft.engine.core.process.instance.model.impl.STransitionInstanceImpl">
					<bean class="org.bonitasoft.engine.core.process.instance.model.impl.STransitionInstanceSQLTransformer"></bean>
				</entry>
				<entry key="org.bonitasoft.engine.core.process.instance.model.impl.SFlowNodeInstanceImpl">
					<bean class="org.bonitasoft.engine.core.process.instance.model.impl.SFlowNodeInstanceSQLTransformer"></bean>
				</entry>
			</map>
		</property>
	</bean>

	<bean class="org.bonitasoft.engine.persistence.DBConfiguration">
		<constructor-arg name="createTablesFile" value="/org/bonitasoft/engine/core/process/instance/model/impl/db/archive/${db.vendor}-createTables.sql" />
		<constructor-arg name="initTablesFile" value="/org/bonitasoft/engine/core/process/instance/model/impl/db/archive/${db.vendor}-initTables.sql" />
		<constructor-arg name="dropTablesFile" value="/org/bonitasoft/engine/core/process/instance/model/impl/db/archive/${db.vendor}-dropTables.sql" />
		<constructor-arg name="filter" value="journal" />
		<constructor-arg name="deleteTenantObjectsFile" value="/org/bonitasoft/engine/core/process/instance/model/impl/db/archive/${db.vendor}-deleteTenantObjects.sql" />
		<property name="sqlTransformers">
			<map>
				<!-- Process instance: -->
				<entry key="org.bonitasoft.engine.core.process.instance.model.archive.impl.SAProcessInstanceImpl">
					<bean class="org.bonitasoft.engine.core.process.instance.model.archive.impl.SAProcessInstanceImplSQLTransformer" />
				</entry>
				<!-- Flow node instance: -->
				<entry key="org.bonitasoft.engine.core.process.instance.model.archive.impl.SAAutomaticTaskInstanceImpl">
					<bean class="org.bonitasoft.engine.core.process.instance.model.archive.impl.SAFlowNodeInstanceImplSQLTransformer" />
				</entry>
				<entry key="org.bonitasoft.engine.core.process.instance.model.archive.impl.SACallActivityInstanceImpl">
					<bean class="org.bonitasoft.engine.core.process.instance.model.archive.impl.SAFlowNodeInstanceImplSQLTransformer" />
				</entry>
				<entry key="org.bonitasoft.engine.core.process.instance.model.archive.impl.SAManualTaskInstanceImpl">
					<bean class="org.bonitasoft.engine.core.process.instance.model.archive.impl.SAFlowNodeInstanceImplSQLTransformer" />
				</entry>
				<entry key="org.bonitasoft.engine.core.process.instance.model.archive.impl.SAUserTaskInstanceImpl">
					<bean class="org.bonitasoft.engine.core.process.instance.model.archive.impl.SAFlowNodeInstanceImplSQLTransformer" />
				</entry>
				<entry key="org.bonitasoft.engine.core.process.instance.model.archive.impl.SALoopActivityInstanceImpl">
					<bean class="org.bonitasoft.engine.core.process.instance.model.archive.impl.SAFlowNodeInstanceImplSQLTransformer" />
				</entry>
				<entry key="org.bonitasoft.engine.core.process.instance.model.archive.event.impl.SAEventInstanceImpl">
					<bean class="org.bonitasoft.engine.core.process.instance.model.archive.impl.SAFlowNodeInstanceImplSQLTransformer" />
				</entry>
				<entry key="org.bonitasoft.engine.core.process.instance.model.archive.impl.SAGatewayInstanceImpl">
					<bean class="org.bonitasoft.engine.core.process.instance.model.archive.impl.SAFlowNodeInstanceImplSQLTransformer" />
				</entry>
				<!-- Transition instance: -->
				<entry key="org.bonitasoft.engine.core.process.instance.model.archive.impl.SATransitionInstanceImpl">
					<bean class="org.bonitasoft.engine.core.process.instance.model.archive.impl.SATransitionInstanceImplSQLTransformer" />
				</entry>
			</map>
		</property>
	</bean>


</beans>