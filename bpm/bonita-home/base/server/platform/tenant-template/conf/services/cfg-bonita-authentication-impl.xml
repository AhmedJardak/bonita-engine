<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="authenticatorDelegate"
		class="com.bonitasoft.engine.authentication.impl.cas.CASAuthenticatorImpl">
		<constructor-arg name="logger" ref="technicalLoggerService" />
		<property name="casServerUrlPrefix"
			value="${authentication.delegate.cas.server.url.prefix:http://cas.internal.bonitasoft.com/}" />
		<property name="casService"
			value="${authentication.delegate.cas.service.url:http://internal.bonitasoft.com/bonita/loginservice}" />
	</bean>

	<bean id="nullAuthenticationDelegate"
		class="com.bonitasoft.engine.authentication.impl.NullAuthenticationDelegate" />

	<bean id="genericAuthenticationService"
		class="com.bonitasoft.engine.authentication.impl.JAASGenericAuthenticationServiceImpl">
		<constructor-arg name="logger" ref="technicalLoggerService" />
		<constructor-arg name="sessionAccessor" ref="sessionAccessor" />
		<property name="authenticatorDelegate"
			ref="${authenticator.delegate:nullAuthenticationDelegate}" />
	</bean>

	<bean id="authenticationService"
		class="org.bonitasoft.engine.authentication.impl.AuthenticationServiceImpl">
		<constructor-arg name="identityService" ref="identityService" />
		<constructor-arg name="logger" ref="technicalLoggerService" />
	</bean>


</beans>