<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>bpm</artifactId>
		<groupId>com.bonitasoft.engine</groupId>
		<version>6.2.0-SNAPSHOT</version>
	</parent>

	<artifactId>bonita-home-sp</artifactId>
	<packaging>pom</packaging>

	<name>Bonita Home</name>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-base-hibernate</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<artifactId>bonita-home</artifactId>
									<groupId>org.bonitasoft.engine</groupId>
									<version>${project.version}</version>
									<type>zip</type>
									<classifier>base-hibernate</classifier>
								</artifactItem>
							</artifactItems>
							<includes>home/**</includes>
							<outputDirectory>${project.build.directory}/base-hibernate</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
					<execution>
						<id>unpack-common</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<artifactId>bonita-home</artifactId>
									<groupId>org.bonitasoft.engine</groupId>
									<version>${project.version}</version>
									<type>zip</type>
									<classifier>common</classifier>
								</artifactItem>
							</artifactItems>
							<includes>home/**</includes>
							<outputDirectory>${project.build.directory}/common</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>distrib-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<descriptors>
								<descriptor>assembly-teamwork.xml</descriptor>
								<descriptor>assembly-efficiency.xml</descriptor>
								<descriptor>assembly-performance.xml</descriptor>
								<descriptor>assembly-performance-cluster.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
