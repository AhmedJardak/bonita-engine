<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="hibernateCacheProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean" depends-on="hazelCastInstance" >
		<property name="properties">
			<props>
<!-- 				Hazelcast second level cache configuration, more details here : http://www.hazelcast.com/docs/2.5/manual/single_html/#HibernateSecondLevelCache -->
				<prop key="hibernate.cache.use_second_level_cache">true</prop>
				<prop key="hibernate.cache.use_query_cache">true</prop>
				<prop key="hibernate.cache.use_minimal_puts">true</prop>
<!-- 				name of the default instance used by bonita, it's configuration is set using cfg-bonita-clustering.xml -->
				<prop key="hibernate.cache.hazelcast.instance_name">bonita</prop>
				<prop key="hibernate.cache.provider_class">com.hazelcast.hibernate.provider.HazelcastCacheProvider</prop>
<!-- 				<prop key="hibernate.cache.region.factory_class">com.hazelcast.hibernate.HazelcastCacheRegionFactory</prop> -->
<!-- 				<prop key="hibernate.cache.region.factory_class">com.hazelcast.hibernate.HazelcastLocalCacheRegionFactory</prop> -->
			</props>
		</property>
	</bean>

</beans>