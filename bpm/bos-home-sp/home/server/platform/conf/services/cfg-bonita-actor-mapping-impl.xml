<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="actorMappingService" class="org.bonitasoft.engine.actor.mapping.impl.ActorMappingServiceImpl">
		<constructor-arg name="persistence" ref="persistenceService" />
		<constructor-arg name="recorder" ref="recorderSync" />
		<constructor-arg name="eventService" ref="eventService" />
		<constructor-arg name="sessionAccessor" ref="sessionAccessor" />
		<constructor-arg name="parserFactory" ref="parserFactory" />
		<constructor-arg name="xmlWriter" ref="xmlWriter" />
	</bean>

	<bean class="org.bonitasoft.engine.persistence.DBConfiguration">
		<constructor-arg name="createTablesFile" value="/org/bonitasoft/engine/core/actor/mapping/db/${db.vendor}-createTables.sql" />
		<constructor-arg name="initTablesFile" value="/org/bonitasoft/engine/core/actor/mapping/db/${db.vendor}-initTables.sql" />
		<constructor-arg name="dropTablesFile" value="/org/bonitasoft/engine/core/actor/mapping/db/${db.vendor}-dropTables.sql" />
		<constructor-arg name="filter" value="journal" />
		<constructor-arg name="deleteTenantObjectsFile" value="/org/bonitasoft/engine/core/actor/mapping/db/${db.vendor}-deleteTenantObjects.sql" />
	</bean>

	<bean id="parserFactory" class="org.bonitasoft.engine.xml.parse.SAXParserFactory">
		<constructor-arg name="validator" ref="validator" />
		<constructor-arg name="logger" ref="technicalLoggerService" />
	</bean>

	<bean id="validator" class="org.bonitasoft.engine.xml.SAXValidator" />

	<bean id="xmlWriter" class="org.bonitasoft.engine.xml.DOMWriter">
		<constructor-arg name="validator" ref="validator" />
	</bean>

	<bean name="sActorBuilder" class="org.bonitasoft.engine.actor.mapping.impl.SActorBuilderImpl" />

</beans>