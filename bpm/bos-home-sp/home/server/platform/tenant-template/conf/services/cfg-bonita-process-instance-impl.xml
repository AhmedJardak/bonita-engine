<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="activityInstanceService" class="org.bonitasoft.engine.core.process.instance.impl.ActivityInstanceServiceImpl">
		<constructor-arg name="logModelBuilder" ref="processInstanceBuilderAccessor" />
		<constructor-arg name="recorder" ref="recorderSync" />
		<constructor-arg name="persistenceRead" ref="persistenceService" />
		<constructor-arg name="eventService" ref="eventService" />
		<constructor-arg name="instanceBuilders" ref="bpmInstanceBuilders" />
	</bean>

	<bean id="processInstanceService" class="org.bonitasoft.engine.core.process.instance.impl.ProcessInstanceServiceImpl">
		<constructor-arg name="builderAccessor" ref="processInstanceBuilderAccessor" />
		<constructor-arg name="recorder" ref="recorderSync" />
		<constructor-arg name="persistenceRead" ref="persistenceService" />
		<constructor-arg name="eventService" ref="eventService" />
		<constructor-arg name="activityService" ref="activityInstanceService" />
		<constructor-arg name="logger" ref="technicalLoggerService" />
		<constructor-arg name="bpmInstanceBuilders" ref="bpmInstanceBuilders" />
		<constructor-arg name="logModelBuilder" ref="processInstanceBuilderAccessor" />
	</bean>

	<bean id="activityInstanceExecutor" class="org.bonitasoft.engine.core.process.instance.impl.ActivityExecutorImpl">
		<constructor-arg name="activityStateManager" ref="activityStateManager" />
		<constructor-arg name="activityInstanceManager" ref="activityInstanceService" />
		<constructor-arg name="transactionExecutor" ref="transactionExecutor" />
	</bean>

	<bean id="activityStateManager" class="org.bonitasoft.engine.core.process.instance.impl.ActivityStateManagerImpl" />

	<bean id="processInstanceExecutor" class="org.bonitasoft.engine.core.process.instance.impl.ProcessInstanceExecutorImpl">
		<constructor-arg name="instanceBuilders" ref="bpmInstanceBuilders" />
		<constructor-arg name="activityInstanceService" ref="activityInstanceService" />
		<constructor-arg name="processInstanceService" ref="processInstanceService" />
		<constructor-arg name="activityStateManager" ref="activityStateManager" />
		<constructor-arg name="logger" ref="technicalLoggerService" />
		<constructor-arg name="activityExecutor" ref="activityInstanceExecutor" />
		<constructor-arg name="transactionExecutor" ref="transactionExecutor" />
		<constructor-arg name="schedulerService" ref="scheduler" />
	</bean>

	<bean id="transactionExecutor" class="org.bonitasoft.engine.core.process.instance.impl.TransactionExecutorImpl">
		<constructor-arg name="transactionService" ref="transactionService" />
	</bean>

</beans>