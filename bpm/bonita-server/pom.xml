									<include>com.bonitasoft.engine.data.instance:bonita-data-instance-model-impl-mybatis</include>
									<include>com.bonitasoft.engine.dependency:bonita-dependency-model-impl-mybatis</include>
									<include>com.bonitasoft.engine.dependency:bonita-dependency-platform-model-impl-mybatis</include>
									<include>com.bonitasoft.engine.document:bonita-document-model-impl-mybatis</include>
									<include>com.bonitasoft.engine.events:bonita-events-api-impl</include>
									<include>com.bonitasoft.engine.external:bonita-web-commands</include>
									<include>com.bonitasoft.engine.external.identity.mapping:bonita-external-identity-mapping-impl-mybatis</include>
									<include>com.bonitasoft.engine.identity:bonita-identity-model-impl-mybatis</include>
									<include>com.bonitasoft.engine.log:bonita-log-api-impl</include>
									<include>com.bonitasoft.engine.log:bonita-log-model-impl-mybatis</include>
									<include>com.bonitasoft.engine.persistence:bonita-persistence-mybatis</include>
									<include>com.bonitasoft.engine.platform:bonita-platform-model-impl-mybatis</include>
									<include>com.bonitasoft.engine.platform.command:bonita-platform-command-model-impl-mybatis</include>
									<include>com.bonitasoft.engine.privilege:bonita-privilege-model-impl-mybatis</include>
									<include>com.bonitasoft.engine.profile:bonita-profile-impl-mybatis</include>
									<include>com.bonitasoft.engine.scheduler:bonita-scheduler-impl-mybatis</include>
									<include>com.bonitasoft.engine.work:bonita-work-parallel</include>
								</includes>
							</artifactSet>
							<outputDirectory>${basedir}/target</outputDirectory>
							<destFileName>${project.build.finalName}.jar</destFileName>
							<promoteTransitiveDependencies>true</promoteTransitiveDependencies>
							<createDependencyReducedPom>true</createDependencyReducedPom>
							<createSourcesJar>true</createSourcesJar>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
				<executions>
					<execution>
						<id>javadoc-jar</id>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<includeDependencySources>true</includeDependencySources>
							<dependencySourceIncludes>
								<dependencySourceInclude>com.bonitasoft.engine.*:*</dependencySourceInclude>
							</dependencySourceIncludes>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
