<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>bpm</artifactId>
		<groupId>org.bonitasoft.engine</groupId>
		<version>6.3.0-SNAPSHOT</version>
	</parent>

	<artifactId>bonita-bpm-integration-tests</artifactId>
	<packaging>pom</packaging>

	<modules>
		<module>bonita-client-test-util</module>
		<module>bonita-integration-client-tests</module>
		<module>bonita-integration-local-tests</module>
	</modules>

	<profiles>
		<profile>
			<id>package-all</id>
			<modules>
				<module>bonita-bpm-services-integration-tests</module>
				<module>bonita-integration-as-tests</module>
			</modules>
		</profile>
		
		<profile>
			<id>tests</id>
			<modules>
				<module>bonita-bpm-services-integration-tests</module>
			</modules>
		</profile>
		
		<profile>
			<id>sonar</id>
			<modules>
				<module>bonita-bpm-services-integration-tests</module>
			</modules>
			<properties>
				<sonar.jacoco.itReportPath>../../target/jacoco-reports/engine-it.exec</sonar.jacoco.itReportPath>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.jacoco</groupId>
						<artifactId>jacoco-maven-plugin</artifactId>
						<configuration>
							<!-- The destination file for the code coverage report has to be set 
								to the same value in the parent pom and in each module pom. Then JaCoCo will 
								add up information in the same report, so that, it will give the cross-module 
								code coverage. -->
							<destFile>${sonar.jacoco.itReportPath}</destFile>
							<includes>
								<include>org.bonitasoft.engine.*</include>
							</includes>
							<excludes>
								<exclude>*Test*</exclude>
							</excludes>
							<append>true</append>
						</configuration>
						<executions>
							<execution>
								<id>post-test</id>
								<configuration>
									<skip>true</skip>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		
		<profile>
			<id>as-tests</id>
			<modules>
				<module>bonita-integration-as-tests</module>
			</modules>
		</profile>
		
		<profile>
			<id>all</id>
			<modules>
				<module>bonita-bpm-services-integration-tests</module>
			</modules>
		</profile>
	</profiles>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>mysql</groupId>
                <artifactId>mysql-connector-java</artifactId>
                <version>5.1.26</version>
            </dependency>
            <dependency>
                <groupId>org.postgresql</groupId>
                <artifactId>postgresql</artifactId>
                <version>9.2-1003-jdbc4</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
