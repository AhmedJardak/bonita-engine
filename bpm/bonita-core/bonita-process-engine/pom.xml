<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>bonita-core</artifactId>
		<groupId>com.bonitasoft.engine.core</groupId>
		<version>6.0.Beta.1-SNAPSHOT</version>
	</parent>

	<artifactId>bonita-process-engine</artifactId>

	<name>Bonita Process Engine</name>

	<dependencies>
		<dependency>
			<groupId>org.bonitasoft.engine.core</groupId>
			<artifactId>bonita-process-engine</artifactId>
			<version>${project.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.bonitasoft.engine.core.process.definition</groupId>
					<artifactId>bonita-process-definition-model</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.bonitasoft.engine</groupId>
					<artifactId>bonita-common</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.bonitasoft.engine</groupId>
			<artifactId>bonita-common</artifactId>
			<version>${project.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.bonitasoft.engine</groupId>
					<artifactId>bonita-common</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.bonitasoft.engine.core.parameter</groupId>
			<artifactId>bonita-parameter-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.bonitasoft.engine.core.process.definition</groupId>
			<artifactId>bonita-process-definition-model</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<artifactSet>
								<includes>
									<include>org.bonitasoft.engine.core:bonita-process-engine</include>
									<include>com.bonitasoft.engine.core.parameter:bonita-parameter-api</include>
									<include>com.bonitasoft.engine.core.process.definition:bonita-process-definition-model</include>
								</includes>
							</artifactSet>
							<outputDirectory>${basedir}/target</outputDirectory>
							<destFileName>${project.build.finalName}.jar</destFileName>
							<promoteTransitiveDependencies>true</promoteTransitiveDependencies>
							<createDependencyReducedPom>true</createDependencyReducedPom>
							<createSourcesJar>true</createSourcesJar>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>