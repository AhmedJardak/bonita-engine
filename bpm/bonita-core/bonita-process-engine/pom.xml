<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>bonita-core</artifactId>
		<groupId>com.bonitasoft.engine.core</groupId>
		<version>6.0.0-beta-015</version>
	</parent>

	<artifactId>bonita-process-engine</artifactId>

	<name>Bonita Process Engine</name>

	<properties>
		<bonita.home>${project.build.directory}/home</bonita.home>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.bonitasoft.manager</groupId>
			<artifactId>manager</artifactId>
		</dependency>

		<dependency>
			<groupId>com.bonitasoft.engine</groupId>
			<artifactId>bonita-common-sp</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.bonitasoft.engine.core.parameter</groupId>
			<artifactId>bonita-parameter-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.bonitasoft.engine.core</groupId>
			<artifactId>bonita-process-engine</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>install license</id>
						<phase>process-test-resources</phase>
						<configuration>
							<target>
								<copy todir="${bonita.home}/server/licenses" failonerror="true">
									<fileset dir="${user.home}/lic" includes="*.lic" />
								</copy>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<systemPropertyVariables>
						<bonita.home>${bonita.home}</bonita.home>
					</systemPropertyVariables>
					<includes>
						<include>com/bonitasoft/engine/licence/LicenseTest.java</include>
					</includes>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>