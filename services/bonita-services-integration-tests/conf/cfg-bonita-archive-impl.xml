<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="archivingStrategy" class="org.bonitasoft.engine.archive.impl.ListArchivingStrategy">
		<constructor-arg name="archives">
			<map>
				<entry key="org.bonitasoft.engine.archive.model.Address" value="true" />
				<entry key="org.bonitasoft.engine.archive.model.Employee" value="true" />
				<entry key="org.bonitasoft.engine.archive.model.EmployeeProjectMapping" value="true" />
				<entry key="org.bonitasoft.engine.archive.model.Laptop" value="true" />
				<entry key="org.bonitasoft.engine.archive.model.Project" value="true" />
        		<entry key="org.bonitasoft.engine.data.instance.model.SDataInstance" value="true" />
        		<entry key="org.bonitasoft.engine.data.instance.model.SDataInstanceVisibilityMapping" value="true" />
			</map>
		</constructor-arg>
	</bean>

	<bean id="archiveService" class="org.bonitasoft.engine.archive.impl.ArchiveServiceImpl">
		<constructor-arg name="definitiveArchiveDescriptor" ref="definitiveArchiveDescriptor" />
		<constructor-arg name="definitiveArchivePersistenceService" ref="persistenceService" />
		<constructor-arg name="logger" ref="technicalLoggerService" />
		<constructor-arg name="archivingStrategy" ref="archivingStrategy" />
		<constructor-arg name="deleteService" ref="deleteService" />
		<constructor-arg ref="transactionService" />
	</bean>

	<bean id="definitiveArchiveDescriptor" class="org.bonitasoft.engine.archive.impl.SArchiveDescriptorImpl">
		<constructor-arg name="name" value="${org.bonitasoft.engine.archive.name}" />
		<constructor-arg name="oldestTime" value="${org.bonitasoft.engine.archive.oldestTime}" />
		<constructor-arg name="newestTime" value="${org.bonitasoft.engine.archive.newestTime}" />
	</bean>

	<bean class="org.bonitasoft.engine.persistence.DBConfiguration">
		<constructor-arg name="createTablesFile" value="/org/bonitasoft/engine/archive/model/db/${db.vendor}-createTables.sql" />
		<constructor-arg name="initTablesFile" value="/org/bonitasoft/engine/archive/model/db/${db.vendor}-initTables.sql" />
		<constructor-arg name="cleanTablesFile" value="/org/bonitasoft/engine/archive/model/db/${db.vendor}-cleanTables.sql" />
		<constructor-arg name="dropTablesFile" value="/org/bonitasoft/engine/archive/model/db/${db.vendor}-dropTables.sql" />
		<constructor-arg name="deleteTenantObjectsFile" value="/org/bonitasoft/engine/archive/model/db/${db.vendor}-deleteTenantObjects.sql" />
		<constructor-arg name="deleteTenantObjectsPriority" value="51" />
		<constructor-arg name="filter" value="journal" />
		<property name="sqlTransformers">
			<map>
				<entry key="org.bonitasoft.engine.archive.model.Laptop">
					<bean class="org.bonitasoft.engine.archive.model.LaptopSQLTransformer" />
				</entry>
				<entry key="org.bonitasoft.engine.archive.model.Employee">
					<bean class="org.bonitasoft.engine.archive.model.EmployeeSQLTransformer" />
				</entry>
				<entry key="org.bonitasoft.engine.archive.model.EmployeeProjectMapping">
					<bean class="org.bonitasoft.engine.archive.model.EmployeeProjectMappingSQLTransformer" />
				</entry>
				<entry key="org.bonitasoft.engine.archive.model.Address">
					<bean class="org.bonitasoft.engine.archive.model.AddressSQLTransformer" />
				</entry>
				<entry key="org.bonitasoft.engine.archive.model.Project">
					<bean class="org.bonitasoft.engine.archive.model.ProjectSQLTransformer" />
				</entry>
			</map>
		</property>
	</bean>

</beans>