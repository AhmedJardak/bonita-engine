<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping auto-import="false">

    <query name="getApplicationById">
        SELECT application
        FROM com.bonitasoft.engine.business.application.impl.SApplicationImpl AS application
        WHERE id = :id
    </query>

    <query name="getApplicationByName">
        SELECT application
        FROM com.bonitasoft.engine.business.application.impl.SApplicationImpl AS application
        WHERE name = :name
    </query>

    <query name="getNumberOfSApplication">
        SELECT count(application)
        FROM com.bonitasoft.engine.business.application.impl.SApplicationImpl AS application
    </query>

    <query name="searchSApplication">
        SELECT application
        FROM com.bonitasoft.engine.business.application.impl.SApplicationImpl AS application
    </query>

</hibernate-mapping>
